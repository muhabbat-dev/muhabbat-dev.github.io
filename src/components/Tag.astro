---
export interface Props {
  tag: string;
}
const { tag } = Astro.props;
---

<a
  href={`/blog/tags/${encodeURIComponent(tag.toLowerCase())}`}
  aria-label={tag}
>
  <span
    class="bg-secondary dark:bg-primary font-semibold text-white dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full"
  >
    #{tag ?? "Blog Tag"}
  </span>
</a>
