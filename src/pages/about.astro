---
import experiences from "../collections/experiences.json";
import AboutExperience from "../components/about-experience.astro";
// import PageHeading from "../components/page-heading.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="About Me" meta={[]}>
  <section class="relative z-20 max-w-2xl mx-auto my-12 px-7 lg:px-0">
    <div class="relative z-20 w-full mx-auto lg:mx-0">
      <h2
        class="text-2xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-3xl lg:text-4xl"
      >
      About Me
      </h2>
        <div
          class="flex flex-row flex-wrap items-center mt-3 text-sm leading-6 text-neutral-600 dark:text-neutral-400 sm:mt-4 lg:mt-6 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
        >
            Hello 👋 I'm a Full Stack Developer and DevOps Engineer from France 
          <img src="/assets/icons/france-flag.png" class="pakistan mx-1 -mb-1" alt="France flag"> 
            I'm passionate about building new products and learning new technology.
        </div>
    </div>




    <img src="/assets/images/about.jpg" class="relative z-30 w-full my-10 rounded-xl" />

    <h2 class="mb-2 text-2xl font-bold dark:text-neutral-200">Short Bio</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      Full Stack Developer 🧑🏻‍💻, Flutter Developer 🤷🏻‍♂️, DevOps Engineer 🤦🏻‍♂️.
    </p>

    <h2
      class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200"
    >
      Experience
    </h2>
    <div class="px-5 py-10">
      {
        experiences.map((experience, loop) => {
          return (
            <>
              {loop == 0 || loop == 1 ? (
                <div class="pb-10 border-l border-gray-200 dark:border-neutral-700">
                  <AboutExperience
                    dates={experience.dates}
                    role={experience.role}
                    company={experience.company}
                    description={experience.description}
                    logo={experience.logo}
                  />
                </div>
              ) : (
                <AboutExperience
                  dates={experience.dates}
                  role={experience.role}
                  company={experience.company}
                  description={experience.description}
                  logo={experience.logo}
                />
              )}
            </>
          )
        })
      }
    </div>

    <h2 class="mt-5 mb-2 text-2xl font-bold lg:mt-10 sm:mt-6 dark:text-neutral-200">Let's Connect</h2>
    <p
      class="text-sm leading-6 text-gray-600 dark:text-neutral-400 sm:leading-7 lg:leading-8 sm:text-base lg:text-lg"
    >
      If you want to stay up to date with my work be sure to follow me on <a
        href="https://x.com/MuhabbatDev"
        target="_blank"
        class="text-indigo-600 underline">X</a>, or
        <a
        href="https://linkedin.com/in/muhabbat-ali"
        target="_blank"
        class="text-indigo-600 underline">LinkedIn</a>
        , or you can send me an email at <a href="mailto:hello@muhabbat.dev" class="text-indigo-600 underline"
        >hello@muhabbat.dev</a
      > and I'll be sure to get back to you. <br>
      If you are looking to work with me, You can see my services on <a class="text-indigo-600 underline" href="https://muhabbat.contra.com/" target="_blank">contra</a>
    </p>
  </section>
</Layout>
